{
  "include": ["src/**/*"],
  "compilerOptions": {
    "module": "preserve",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "declaration": true,
    "declarationDir": "./dist"
  }
}
